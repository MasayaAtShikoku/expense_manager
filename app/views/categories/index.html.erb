<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<p><%= link_to 'New Category', new_category_path, class: 'btn btn-primary' %></p>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

