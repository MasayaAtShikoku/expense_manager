<p id="notice"><%= notice %></p>

<h2><%= @item.name %></h2>

<p>
  <strong>Amount:</strong>
  <%= number_to_currency(@item.amount, locale: :jp) %>
</p>
<p>
  <strong>Periodicity:</strong>
  <%= @item.periodicity.name if @item.periodicity %>
</p>

<%= link_to 'List', items_path, class: "btn btn-secondary" %>
<%= link_to 'Edit', edit_item_path(@item), class: "btn btn-secondary" %> 
<%= link_to 'Back', :back, class: "btn btn-secondary" %>
