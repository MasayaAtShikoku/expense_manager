<p id="notice"><%= notice %></p>

<h1>Category</h1>

<h2><%= @category.name %></h2>

<p>
  <strong>Annual Total Amount:</strong>
  <%= number_to_currency @category.annual_total_amount, locale: :jp %>
</p>

<p>
  <strong>Monthly Total Amount:</strong>
  <%= number_to_currency @category.monthly_total_amount, locale: :jp %>
</p>

<%= link_to 'Edit', edit_category_path(@category), class: 'btn btn-secondary' %> 
<%= link_to 'Back', :back, class: 'btn btn-secondary' %>

<%= link_to 'New Item', new_category_item_path(@category), class: 'btn btn-primary' %>

<%= link_to 'List of Categories', categories_path, class: 'btn btn-secondary' %>

<p>
  <%= render partial: 'items/index', locals: { items: @category.items.order(:description) } %>
</p>
