<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<p>
  <strong>Grand Monthly Total Amount:</strong>
  <%= number_to_currency Item.grand_monthly_total_amount, locale: :jp %>
</p>

<p>
  <strong>Grand Annual Total Amount:</strong>
  <%= number_to_currency Item.grand_annual_total_amount, locale: :jp %>
</p>

<p><%= link_to 'New Category', new_category_path, class: 'btn btn-primary' %></p>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th class="text-md-right">Monthly Total Amount</th>
      <th class="text-md-right">Annual Total Amount</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
	<td><%= link_to category.name, category %></td>
        <td class="text-md-right"><%= number_to_currency category.monthly_total_amount, locale: :jp %></td>
	<td class="text-md-right"><%= number_to_currency category.annual_total_amount, locale: :jp %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

